<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.service.search.binary</groupId>
         <artifactId>search-binary-master</artifactId>
         <version>1.6.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>binary-search-webapp</artifactId>
    <packaging>war</packaging>
    <version>1.8.0-SNAPSHOT</version>

    <name>IntAct Services :: Search :: Binary :: Binary Search Webapp</name>
    <description>Interface for the PSIMITAB search</description>

    <properties>
        <jetty.port>9090</jetty.port>
        <jetty.context>binary-search</jetty.context>
    </properties>

    <build>
        <finalName>intact-binary-search-${buildNumber}</finalName>

         <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/webapp-filtered</directory>
                <filtering>true</filtering>
                <targetPath>../../src/main/webapp</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>com.sun.tools.xjc.maven2</groupId>
                <artifactId>maven-jaxb-plugin</artifactId>
                <configuration>
                    <generatePackage>uk.ac.ebi.intact.binarysearch.webapp.generated</generatePackage>
                    <extension>true</extension>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>

                <dependencies>
                    <dependency>
                        <groupId>com.sun.xml.bind</groupId>
                        <artifactId>jaxb-impl</artifactId>
                        <version>2.1</version>
                    </dependency>
                    <dependency>
                        <groupId>javax.xml.bind</groupId>
                        <artifactId>jaxb-api</artifactId>
                        <version>2.1</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- Use this profile to build the application for servers
            which do not include JSP 2.1 (e.g. tomcat < 6.0) -->
            <id>tomcat-5x</id>
            <activation>
                <property>
                    <name>tomcat</name>
                    <value>5x</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
    <groupId>org.apache.tomcat</groupId>
    <artifactId>jasper-el</artifactId>
    <version>6.0.14</version>
</dependency>

            </dependencies>
        </profile>
    </profiles>

    <!-- Project dependencies -->
    <dependencies>
        <dependency>
            <groupId>psidev.psi.mi</groupId>
            <artifactId>psimitab-search</artifactId>
            <version>1.5.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.commons</groupId>
