<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.service</groupId>
        <artifactId>service-master</artifactId>
        <version>1.6.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>search-app</artifactId>
    <packaging>war</packaging>
    <version>1.6.0-SNAPSHOT</version>

    <name>IntAct Services :: Search :: Legacy :: Search Webapp</name>
    <description>Search web interface</description>
    <url>http://www.ebi.ac.uk/~intact/devsite/${artifactId}</url>

    <properties>
        <jetty.port>8081</jetty.port>
        <db.separator>:</db.separator>
    </properties>

    <profiles>
         <profile>
             <id>ebi-db</id>
             <activation>
                 <property>
                     <name>db</name>
                 </property>
             </activation>
             <build>
                 <plugins>
                     <plugin>
                    <groupId>uk.ac.ebi.intact.commons</groupId>
                    <artifactId>hibernateconfig-maven-plugin</artifactId>
                    <version>2.1.0</version>
                    <configuration>
                        <sessionFactoryName>${sessionFactoryName}</sessionFactoryName>
                        <dialect>${db.dialect}</dialect>
                        <driver>${db.driver}</driver>
                        <url>${db.protocol}:${db.subprotocol}${db.separator}${db.alias}</url>
                        <user>${db.user}</user>
                        <password>${db.password}</password>
                        <showSql>${showSql}</showSql>
                        <scope>${hibernate.scope}</scope>
                        <hbm2ddlAuto>${db.hbm2ddlAuto}</hbm2ddlAuto>
                        <connectionProviderClass>${db.connectionProviderClass}</connectionProviderClass>
                    </configuration>
                    <executions>
                        <execution>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>generate-config</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                 </plugins>
             </build>
         </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/webapp-filtered</directory>
                <filtering>true</filtering>
                <targetPath>../../src/main/webapp</targetPath>
            </resource>
        </resources>
    </build>

    <dependencies>
        <dependency>
            <groupId>uk.ac.ebi.intact.core</groupId>
            <artifactId>intact-core</artifactId>
            <version>1.9.7</version>
        </dependency>
        <!--<dependency>-->
            <!--<groupId>uk.ac.ebi.intact.service.search.legacy</groupId>-->
            <!--<artifactId>search-engine</artifactId>-->
        <!--</dependency>-->

        <!-- third party -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2</version>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>3.1-rc1</version>
        </dependency>

        <!-- dependency to draw the graph schemas in the advanced search -->
        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>jimi</artifactId>
            <version>1.0</version>
        </dependency>

        <!-- Web development-->
        <dependency>
            <groupId>struts</groupId>
            <artifactId>struts</artifactId>
        </dependency>

        <dependency>
            <groupId>displaytag</groupId>
            <artifactId>displaytag</artifactId>
            <version>1.0</version>
        </dependency>

        <!-- server -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jsp-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>taglibs</groupId>
            <artifactId>standard</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>jstl</groupId>
            <artifactId>jstl</artifactId>
            <version>1.0</version>
        </dependency>

    </dependencies>

     <!-- EBI repositories -->
    <repositories>
        <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>


</project>
