    <groupId>uk.ac.ebi.intact.service.psicquic</groupId>
    <artifactId>psicquic-ws</artifactId>
    <packaging>war</packaging>

    <version>1.0-SNAPSHOT</version>

    <name>IntAct :: PSICQUIC WS</name>

    <properties>
        <cxf.version>2.1.1</cxf.version>
        <spring.version>2.5.5</spring.version>

        <hibernate.driver>${db.driver}</hibernate.driver>
        <hibernate.url>${db.protocol}:${db.subprotocol}${db.separator}${db.alias}</hibernate.url>
        <hibernate.user>${db.user}</hibernate.user>
        <hibernate.password>${db.password}</hibernate.password>

    </properties>

    <build>
        <finalName>${artifactId}-${version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>1.9</version>
                <executions>
                    <execution>
                        <id>wsimport</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <extension>true</extension>
                    <wsdlDirectory>${project.basedir}/src/main/wsdl/</wsdlDirectory>
                    <bindingDirectory>${project.basedir}/src/main/wsdl/</bindingDirectory>
                    <verbose>true</verbose>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.8</version>
                <configuration>
                    <contextPath>${pom.artifactId}</contextPath>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <profile>
            <id>jdk6</id>
            <activation>
                <jdk>1.6</jdk>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>javax.activation</groupId>
                    <artifactId>activation</artifactId>
                    <version>1.1</version>
                    <scope>provided</scope>
