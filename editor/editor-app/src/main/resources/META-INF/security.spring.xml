<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
             http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.xsd">

    <http session-fixation-protection="none">
        <intercept-url pattern="/do/login" filters="none"/>
        <intercept-url pattern="/pages/login.jsp" filters="none"/>
        <intercept-url pattern="/images/**" filters="none"/>
        <intercept-url pattern="/layouts/**" filters="none"/>
        <intercept-url pattern="/**" access="ROLE_CURATOR"/>

        <form-login login-page="/pages/login.jsp" default-target-url="/welcome.jsp" authentication-failure-url="/do/login"/>
        <logout logout-url="/do/logout" invalidate-session="true"/>

        <concurrent-session-control max-sessions="1" />
    </http>

    <beans:bean class="uk.ac.ebi.intact.application.editor.security.EditorAuthenticationProvider">
        <custom-authentication-provider/>
    </beans:bean>


</beans:beans>