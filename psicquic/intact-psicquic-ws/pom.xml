    <groupId>uk.ac.ebi.intact.service.psicquic</groupId>
    <artifactId>intact-psicquic-ws</artifactId>
    <packaging>war</packaging>

    <version>1.0-SNAPSHOT</version>

    <name>IntAct Services :: PSICQUIC WS</name>

    <properties>
        <cxf.version>2.1.3</cxf.version>
        <spring.version>2.5.5</spring.version>

        <!-- configurable bits -->

        <psicquic.index>${intact.interactionIndex}</psicquic.index>
        <psicquic.stats.dir>${project.build.directory}/stats</psicquic.stats.dir>

        <intact.institution>intact</intact.institution>

    </properties>

    <build>
        <finalName>${artifactId}-${version}</finalName>

         <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <sourceRoot>${basedir}/target/generated/java</sourceRoot>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/wsdl/psicquic.wsdl</wsdl>
                                    <extraargs>
                                            <extraarg>-b</extraarg>
                                            <extraarg>${basedir}/src/main/wsdl/intact-binding.xjb</extraarg>
                                          </extraargs>
                                </wsdlOption>
                            </wsdlOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                	<dependency>
                  		<groupId>xerces</groupId>
                  		<artifactId>xercesImpl</artifactId>
                  		<version>2.8.1</version>
               		</dependency>
            	</dependencies>
            </plugin>

             <!--<plugin>-->
                <!--<groupId>org.jvnet.jaxb2.maven2</groupId>-->
	            <!--<artifactId>maven-jaxb2-plugin</artifactId>-->
                <!--<configuration>-->
                    <!--<schemaDirectory>${project.basedir}/src/main/wsdl</schemaDirectory>-->
                    <!--<bindingDirectory>${project.basedir}/src/main/wsdl</bindingDirectory>-->
                    <!--<extension>true</extension>-->
                <!--</configuration>-->
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<goals>-->
                            <!--<goal>generate</goal>-->
                        <!--</goals>-->
                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->

            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.8</version>
                <configuration>
                    <contextPath>${pom.artifactId}</contextPath>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

        </plugins>
    </build>

