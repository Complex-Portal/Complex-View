<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.service.hierarchview.legacy</groupId>
        <artifactId>hierarchview-legacy-master</artifactId>
        <version>1.6.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>hierarch-view-app</artifactId>
    <packaging>war</packaging>
    <version>1.6.0-SNAPSHOT</version>

    <name>IntAct Services :: HierarchView :: Legacy :: Old Hierarch View Webapp</name>
    <description>Hierarch View Application</description>

    <properties>
        <jetty.port>9095</jetty.port>
        <db.alias>nodb</db.alias>

        <!-- default value in case you haven't defined these in a profile ${HOME}/.m2/settings.xml-->
        <intact.interactionIndex>/ebi/sp/pro6/intact/public-tomcat/psimitab-index/current</intact.interactionIndex>
        <intact.solr.interactions.url>http://padney.ebi.ac.uk:8080/solr/core_stage</intact.solr.interactions.url>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/webapp-filtered</directory>
                <filtering>true</filtering>
                <targetPath>../../src/main/webapp</targetPath>
            </resource>
        </resources>
    </build>
      
    <dependencies>

        <!-- Solr based search -->
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-solr</artifactId>
            <version>2.1.0-SNAPSHOT</version>
        </dependency>
        
        <!-- Lucene based search -->
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-core</artifactId>
            <version>2.3.0</version>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>1.0.20070429</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.app.hierarchview</groupId>
            <artifactId>tulip-client</artifactId>
            <version>1.1.0</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.service.search.legacy</groupId>
            <artifactId>search-engine</artifactId>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.service.hierarchview</groupId>
            <artifactId>intact-graph</artifactId>
            <version>1.6.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.service.commons</groupId>
            <artifactId>app-commons</artifactId>
        </dependency>
        <dependency>
            <groupId>psidev.psi.mi</groupId>
            <artifactId>psimitab</artifactId>
            <version>1.7.4</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-psimitab-converters</artifactId>
            <version>2.1.0-SNAPSHOT</version>
        </dependency>

        <!-- Binary Search Client -->
        <dependency>
            <groupId>uk.ac.ebi.intact.service.search.binary</groupId>
            <artifactId>wsclient</artifactId>
            <version>1.6.0-rc2-SNAPSHOT</version>
        </dependency>


        <!-- Web development-->
        <dependency>
            <groupId>struts</groupId>
            <artifactId>struts</artifactId>
        </dependency>

        <dependency>
            <groupId>displaytag</groupId>
            <artifactId>displaytag</artifactId>
            <version>1.0</version>
        </dependency>

        <!-- server -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jsp-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <!-- EBI repositories -->
    <repositories>
        <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <!-- EBI repositories - Where the IntAct artifacts are stored -->
        <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>


</project>
