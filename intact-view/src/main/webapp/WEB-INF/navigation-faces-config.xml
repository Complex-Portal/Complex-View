<?xml version="1.0"?>
<!-- In this file we define the navigation model for our application -->
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

    


    <!--
    Navigation: (the number is the level)

    0 Home              (nav_home)
      1 General         (nav_general)
          2 Summary     (nav_general_summary)
      1 IMEx Exchange   (nav_imex)
          2 FTP         (nav_imex_ftp)
          2 Local Repository (nav_imex_repo)
      1 Test Space      (nav_test)

    -->

    <managed-bean>
        <managed-bean-name>nav_home</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>Home</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/start.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>home</value>
        </managed-property>
        <managed-property>
            <property-name>children</property-name>
            <list-entries>
                <value-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</value-class>
                <value>#{nav_general}</value>
                <value>#{nav_imex}</value>
                <value>#{nav_test}</value>
            </list-entries>
        </managed-property>
    </managed-bean>

    <!-- General -->

    <managed-bean>
        <managed-bean-name>nav_general</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>General</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>#{nav_general_summary.viewId}</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>#{nav_general_summary.outcome}</value>
        </managed-property>
         <managed-property>
            <property-name>children</property-name>
            <list-entries>
                <value-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</value-class>
                <value>#{nav_general_summary}</value>
                <value>#{nav_general_results}</value>
            </list-entries>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>nav_general_summary</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>General</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/pages/general/summary.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>general.summary</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>nav_general_results</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>Results - Test</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/pages/general/results.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>general.results</value>
        </managed-property>
    </managed-bean>

    <!-- IMEx Exchange -->

    <managed-bean>
        <managed-bean-name>nav_imex</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>IMEx Exchange</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/pages/imex/ftp.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>imex.ftp</value>
        </managed-property>
        <managed-property>
            <property-name>children</property-name>
            <list-entries>
                <value-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</value-class>
                <value>#{nav_imex_ftp}</value>
                <value>#{nav_imex_repo}</value>
            </list-entries>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>nav_imex_ftp</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>FTP Status</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/pages/imex/ftp.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>imex.ftp</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>nav_imex_repo</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>Local Repository</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/pages/imex/repo.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>imex.repo</value>
        </managed-property>
    </managed-bean>

    <!-- Test -->

    <managed-bean>
        <managed-bean-name>nav_test</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>label</property-name>
            <value>Test Space</value>
        </managed-property>
        <managed-property>
            <property-name>viewId</property-name>
            <value>/test.xhtml</value>
        </managed-property>
        <managed-property>
            <property-name>outcome</property-name>
            <value>test</value>
        </managed-property>
    </managed-bean>


    <!-- create the treemodel -->

    <managed-bean>
        <managed-bean-name>navTreeList</managed-bean-name>
        <managed-bean-class>
            java.util.ArrayList
        </managed-bean-class>
        <managed-bean-scope>
            none
        </managed-bean-scope>
        <list-entries>
            <value-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaNavigationItem</value-class>
            <value>#{nav_home}</value>
        </list-entries>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>navTreeModel</managed-bean-name>
        <managed-bean-class>org.apache.myfaces.trinidad.model.ChildPropertyTreeModel</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>childProperty</property-name>
            <value>children</value>
        </managed-property>
        <managed-property>
            <property-name>wrappedData</property-name>
            <value>#{navTreeList}</value>
        </managed-property>
    </managed-bean>

    <!-- create the navigationModel -->

    <managed-bean>
        <managed-bean-name>viewIdMenuModel</managed-bean-name>
        <managed-bean-class>org.apache.myfaces.trinidad.model.ViewIdPropertyMenuModel</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
        <managed-property>
            <property-name>viewIdProperty</property-name>
            <value>viewId</value>
        </managed-property>
        <managed-property>
            <property-name>wrappedData</property-name>
            <value>#{navTreeModel}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>navigationModel</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.services.faces.athena.nav.AthenaMenuModelAdapter</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>model</property-name>
            <value>#{viewIdMenuModel}</value>
        </managed-property>
    </managed-bean>


</faces-config>