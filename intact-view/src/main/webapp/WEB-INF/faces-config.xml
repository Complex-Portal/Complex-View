<?xml version="1.0"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

  <application>
      <default-render-kit-id>
          org.apache.myfaces.trinidad.core
      </default-render-kit-id>
      <el-resolver>
          org.springframework.web.jsf.el.SpringBeanFacesELResolver
      </el-resolver>
      <resource-bundle>
          <base-name>uk.ac.ebi.intact.IntactView</base-name>
          <var>intactView</var>
      </resource-bundle>
  </application>

    <lifecycle>
        <phase-listener>uk.ac.ebi.intact.view.webapp.application.SearchConfigCheckPhaseListener</phase-listener>
    </lifecycle>

    <!-- Search -->

    <managed-bean>
        <managed-bean-name>searchBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.search.SearchController</managed-bean-class>
         <!--configured in beans.spring.xml, declared here only for IDE purposes -->
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>

    <!-- Molecule view -->
    <managed-bean>
        <managed-bean-name>moleculeViewBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.moleculeview.MoleculeViewController</managed-bean-class>
         <!--configured in beans.spring.xml, declared here only for IDE purposes -->
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>

     <!-- admin and helpers-->
    <managed-bean>
        <managed-bean-name>appConfigBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.application.AppConfigBean</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>requestConfigBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.application.RequestConfigBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
