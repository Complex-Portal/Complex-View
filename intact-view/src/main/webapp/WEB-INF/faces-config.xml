    <managed-bean>
        <managed-bean-name>firstTimeBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.admin.FirstTimeBean</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>contactBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.admin.ContactController</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>


    <!-- view controllers / backing beans for autocomple-->
   <managed-bean>
        <managed-bean-name>ontologyBean</managed-bean-name>
        <managed-bean-class>uk.ac.ebi.intact.view.webapp.controller.application.OntologyBean</managed-bean-class>
         <!--configured in beans.spring.xml, declared here only for IDE purposes -->
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>
  
</faces-config>