    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.ac.ebi.intact.service.sandbox</groupId>
    <artifactId>intact-search-webapp</artifactId>
    <packaging>war</packaging>
    <version>2.0-SNAPSHOT</version>

    <name>IntAct Services :: Search Webapp (2)</name>

    <scm>
        <connection>scm:svn:https://brunoaranda.googlecode.com/svn/intact/trunk/intact-search-webapp</connection>
        <developerConnection>scm:svn:https://brunoaranda.googlecode.com/svn/intact/trunk/intact-search-webapp
        </developerConnection>
        <url>http://code.google.com/p/brunoaranda/</url>
    </scm>

    <properties>
        <jetty.port>9092</jetty.port>

        <hibernate.driver>${db.driver}</hibernate.driver>
        <hibernate.url>${db.protocol}:${db.subprotocol}${db.separator}${db.alias}</hibernate.url>
        <hibernate.user>${db.user}</hibernate.user>
        <hibernate.password>${db.password}</hibernate.password>
    </properties>

    <build>
        <finalName>athena</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

    </build>

    <profiles>
        <profile>
            <id>h2</id>
            <properties>
                <hibernate.url>jdbc:h2:mem/mydb</hibernate.url>
                <db.driver>org.h2.Driver</db.driver>
                <db.dialect>org.hibernate.dialect.H2Dialect</db.dialect>
                <db.user>sa</db.user>
                <db.password></db.password>

                <db.hbm2ddlAuto>create-drop</db.hbm2ddlAuto>
            </properties>

            <dependencies>
                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <version>1.0.20070429</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>intact-pg</id>
            <properties>
                <hibernate.url>jdbc:postgresql://localhost:5432/intact-db</hibernate.url>
                <db.driver>org.postgresql.Driver</db.driver>
                <db.dialect>org.hibernate.dialect.PostgreSQLDialect</db.dialect>
                <db.user>intact</db.user>
                <db.password>lala</db.password>

                <!--<db.hbm2ddlAuto>create-drop</db.hbm2ddlAuto>-->

            </properties>

            <dependencies>
                <dependency>
                    <groupId>postgresql</groupId>
                    <artifactId>postgresql</artifactId>
                    <version>8.2-504.jdbc3</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>apache-maven-snapshots</id>
            <url>http://people.apache.org/repo/m2-snapshot-repository</url>
        </repository>

        <!-- EBI Repos -->
        <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

