<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.service</groupId>
        <artifactId>service-master</artifactId>
        <version>1.6.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.ac.ebi.intact.service.sandbox</groupId>
    <artifactId>intact-view</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>

    <name>IntAct Services :: View</name>

    <scm>
        <connection>scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/service/trunk/intact-view</connection>
        <developerConnection>scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/service/trunk/intact-view
        </developerConnection>
        <url>https://intact.svn.sourceforge.net/svnroot/intact/repo/service/trunk/intact-view/</url>
    </scm>

    <properties>
        <debug>true</debug>

        <jetty.port>9092</jetty.port>
        <jetty.context>view</jetty.context>

        <appRoot>/intact</appRoot>
        
        <hibernate.driver>${db.driver}</hibernate.driver>
        <hibernate.url>${db.protocol}:${db.subprotocol}${db.separator}${db.alias}</hibernate.url>
        <hibernate.user>${db.user}</hibernate.user>
        <hibernate.password>${db.password}</hibernate.password>

        <!-- Webapp default config -->
        <intact.menu.url>http://www.ebi.ac.uk/~intact/site/menu/menu-latest.xml</intact.menu.url>
        <intact.news.url>http://www.ebi.ac.uk/~intact/site/news/news-latest.xml</intact.news.url>

        <intact.webapp.name>IntAct</intact.webapp.name>
        <intact.webapp.logo.url>http://www.ebi.ac.uk/intact/site/images/logo_intact_small.gif</intact.webapp.logo.url>

        <google.analytics.tracker></google.analytics.tracker>

        <!-- Other intact apps -->
        <intact.hierarchview.url>${appRoot}/hierarchView</intact.hierarchview.url>

        <!-- ChEBI -->
        <chebi.url>http://www.ebi.ac.uk/chebi</chebi.url>

        <!-- Das -->
        <das.referenceserver.url>${appRoot}/das-srv/dgi/das/dgi/</das.referenceserver.url>
        <das.annotationserver.intact.url>${appRoot}/das-srv/dgi/das/intact/</das.annotationserver.intact.url>
        <das.annotationserver.chebi.url>${appRoot}/das-srv/dgi/das/chebi/</das.annotationserver.chebi.url>

    </properties>

    <build>
        <!--<finalName>intact-view</finalName>-->

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/webapp-filtered</directory>
                <filtering>true</filtering>
                <targetPath>../../src/main/webapp</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                    <artifactId>maven-jaxb2-plugin</artifactId>
                <configuration>
                    <schemaDirectory>${project.basedir}/src/main/resources/META-INF</schemaDirectory>
                    <bindingDirectory>${project.basedir}/src/main/resources/META-INF</bindingDirectory>
                    <extension>true</extension>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>

    <profiles>
        <!-- The following profile is needed to deploy in tomcat 5.x
             Contains the EL api and tomcat's implementation -->
        <profile>
            <id>tomcat-5x</id>
            <dependencies>
                <dependency>
                    <groupId>org.apache.tomcat</groupId>
                    <artifactId>el-api</artifactId>
                    <version>6.0.16</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.tomcat</groupId>
                    <artifactId>jasper-el</artifactId>
                    <version>6.0.16</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>h2</id>
            <properties>
                <hibernate.url>jdbc:h2:mem/mydb</hibernate.url>
                <db.driver>org.h2.Driver</db.driver>
                <db.dialect>org.hibernate.dialect.H2Dialect</db.dialect>
                <db.user>sa</db.user>
                <db.password></db.password>
                <db.hbm2ddlAuto>create-drop</db.hbm2ddlAuto>
            </properties>

            <dependencies>
                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <version>1.0.20070429</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>apache-maven-snapshots</id>
            <url>http://people.apache.org/repo/m2-snapshot-repository</url>
        </repository>

        <!-- EBI Repos -->
        <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

